<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>GirlsCanCode</title>
  <link rel="stylesheet" href="gcc.css">
</head>
<body>
  <div class="topic">
    <header>
      <div class="menu">
        <a href="/"> Home </a>

        <%= link_to "Participants", users_path %>
        <%= link_to "Events", events_path %>

        <%= link_to "Register", register_path %>
        <% if logged_in? %>
          <div class="name", style="float: right">
            <%= link_to current_user.first_name, user_path(current_user) %>
          </div>
             <%= link_to 'Sign out', signout_path, method: :delete, style: "float:right;" %>
        <% else %>
          <%= link_to "Sign in", signin_path, style: "float: right;" %>
          <%= link_to "Sign up", signup_path, style: "float: right;" %>
        <% end %>
      </div>


    </header>

    <% if logged_in? && current_user.admin? %>
      <div class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Events<span class="caret"></span></a>
        <div class="dropdown-menu">
          <%= link_to "All Events", events_path, style: "color: black;" %>
          <% if logged_in? and current_user.admin? %>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Create New Event", new_event_path %></li>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</body>

