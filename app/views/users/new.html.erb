
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="gcc_r.css">
</head>
<body>
<!--form action="home.html"-->
<%= form_for(@user, url: signup_path) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="container">
    <h1>Register</h1>
    <p>Please fill in this form to create an account and register for the seminar.</p>
    <hr>

    <!--label for="fname"><b>First Name</b></label-->
    <%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder: "First name" %>
    <!--input type="text" id="fname" name="first_name" placeholder="Your name.."-->

    <!--label for="lname"><b>Last Name</b></label>
    <input type="text" id="lname" name="lastname" placeholder="Your last name.."-->
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: "Last name" %>

    <!--label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" required-->
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Your email address" %>

    <!--label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required-->
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password" %>

    <!--label for="psw-repeat"><b>Repeat Password</b></label>
    <input type="password" placeholder="Repeat Password" name="psw-repeat" required-->
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, placeholder: "Re-enter password" %>

    <hr>

    <p>By creating an account you agree to our <a href=".">Terms & Privacy</a>.</p>
    <!--button type="submit" class="registerbtn">Register</button-->
    <%= f.submit "Register", class: "btn btn-primary" %>
  </div>

  <div class="container signin">
    <p>Already have an account? <a href="signin">Sign in</a>.</p>
  </div>
<% end %>>
</body>
</html>
